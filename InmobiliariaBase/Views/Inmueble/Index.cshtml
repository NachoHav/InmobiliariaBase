@model IEnumerable<InmobiliariaBase.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<h1 class="text-center">Inmuebles</h1>

<p>
    <a asp-action="Crear" class="btn btn-dark">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Superficie)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Importe)
            </th>

            <th class="text-center">
                @Html.DisplayNameFor(model => model.PropietarioId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Ambientes)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Superficie)
                m2
            </td>
            <td class="text-center">
               $@Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td class="text-center">
                @(item.Duenio.Nombre + " " + item.Duenio.Apellido)
            </td>
            <td class="text-center">
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary" title="Editar">Editar</a>

                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar">Eliminar</a>

            </td>
        </tr>
}
    </tbody>
</table>
