@model InmobiliariaBase.Models.Pago

@{
    ViewData["Title"] = "Crear";


    Contrato c =(Contrato)ViewBag.Contrato;
}

<h1>Crear</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" readonly asp-for="IdContrato" value="@c.Id" class="form-control" />
            <input type="hidden" readonly asp-for="Importe" value="@c.Inmueble.Importe" class="form-control" />


            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <input asp-for="IdContrato" class="form-control" value="@c.Id" disabled />
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="@c.Inmueble.Importe" class="form-control" value="$@c.Inmueble.Importe" disabled />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label>Direccion Inmueble</label>
                <input disabled value="@c.Inmueble.Direccion" class="form-control" />
            </div>

            <div class="form-group">
                <label>Nombre Inquilino</label>
                <input disabled value="@c.Inquilino.Nombre @c.Inquilino.Apellido" class="form-control" />
            </div>



            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input type="date" asp-for="FechaPago" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ObtenerPorContrato" asp-route-id="@c.Id">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
