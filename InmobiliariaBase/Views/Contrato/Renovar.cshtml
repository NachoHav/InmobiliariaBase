@model InmobiliariaBase.Models.Contrato

@{
    ViewData["Title"] = "Renovar";
    Contrato c = (Contrato)ViewData["Contrato"];
}

<h1 class="text-center">Renovar</h1>

<h4 class="text-center">Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Renovar" class="text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control text-center" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="FechaDesde" class="control-label"></label>
                <input asp-for="FechaDesde" class="form-control text-center" />
                <span asp-validation-for="FechaDesde" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="FechaHasta" class="control-label"></label>
                <input asp-for="FechaHasta" class="form-control text-center" />
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <label asp-for="InmuebleId" class="control-label"></label>
                <input asp-for="InmuebleId" class="form-control text-center" disabled />
                <span asp-validation-for="InmuebleId" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="InquilinoId" class="control-label"></label>
                <input asp-for="InquilinoId" class="form-control text-center" disabled />
                <span asp-validation-for="InquilinoId" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control text-center" disabled />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-outline-danger">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
        </svg>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
