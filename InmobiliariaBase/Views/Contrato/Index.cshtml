@model IEnumerable<InmobiliariaBase.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Crear">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.FechaDesde)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.InmuebleId)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.InquilinoId)
            </th>
            <th class="text-center">
                Inquilino
            </th>

            <th class="text-center">
                Direccion
            </th>
            <th class="text-center">
                Tipo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FechaDesde)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.FechaHasta)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.InmuebleId)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.InquilinoId)
            </td>
            <td class="text-center">
                @(item.Inquilino.Nombre + " " + item.Inquilino.Apellido)
            </td>
            <td class="text-center">
                @(item.Inmueble.Direccion)
            </td>
            <td class="text-center">
                @(item.Inmueble.Tipo)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary" title="Editar">Editar</a>

                <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger" title="Eliminar">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
